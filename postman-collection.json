{
  "info": {
    "name": "Instructions Capture Service",
    "description": "API collection for testing the Instructions Capture Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload CSV File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "samples/sample-trades.csv"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/trades/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "trades", "upload"]
        }
      }
    },
    {
      "name": "Upload JSON File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "samples/sample-trades.json"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/trades/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "trades", "upload"]
        }
      }
    },
    {
      "name": "Process Single Trade",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account_number\": \"1234567890\",\n  \"security_id\": \"ABC123\",\n  \"trade_type\": \"Buy\",\n  \"amount\": 100000,\n  \"timestamp\": \"2025-08-04T21:15:33\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/trades/single",
          "host": ["{{baseUrl}}"],
          "path": ["api", "trades", "single"]
        }
      }
    },
    {
      "name": "Get Canonical Trade",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/trades/canonical/{{tradeId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "trades", "canonical", "{{tradeId}}"]
        }
      }
    },
    {
      "name": "Get Statistics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/trades/stats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "trades", "stats"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "tradeId",
      "value": "replace-with-actual-trade-id"
    }
  ]
}